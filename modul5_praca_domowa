def post():
    r = requests.get('https://api.exchangeratesapi.io/latest?base=USD')
    print('Dane:',r.text)
    print("Czas trwania zapytania:", r.elapsed.total_seconds())
    print("Data:",date.today())
  


def run(function):
    x=0
  while x in range(1,9):
      def wrapper():
            function()
        time.sleep(1)
        return wrapper() 
        x+=1
    
                   
run(post)
